# Backend API Configuration
# For local development, use your local backend URL
# For production, update this to your deployed backend URL
EXPO_PUBLIC_API_URL=http://localhost:3000

# Example for iOS Simulator with local backend:
# EXPO_PUBLIC_API_URL=http://localhost:3000

# Example for Android Emulator with local backend:
# EXPO_PUBLIC_API_URL=http://10.0.2.2:3000

# Example for physical device (replace with your computer's IP):
# EXPO_PUBLIC_API_URL=http://192.168.1.100:3000

# PRODUCTION (use HTTPS only):
# EXPO_PUBLIC_API_URL=https://bookit-backend.onrender.com
# EXPO_PUBLIC_API_URL=https://your-backend-domain.com

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# Mock Data
USE_MOCK_API=true

# OAuth (for future social login)
GOOGLE_CLIENT_ID=your_google_client_id
FACEBOOK_APP_ID=your_facebook_app_id

# Storage
STORAGE_ENCRYPTION_KEY=your_encryption_key

# Other Services
MAPS_API_KEY=your_maps_api_key
STRIPE_PUBLISHABLE_KEY=your_stripe_key
